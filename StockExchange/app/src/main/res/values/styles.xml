<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="open_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@drawable/bullbear</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:background">#1e88e5</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="answers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">#1e88e5</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="button2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">#1e88e5</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:hint">@string/last</item>
        <item name="android:inputType">textCapWords</item>
    </style>


</resources>
